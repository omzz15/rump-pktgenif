#!/bin/sh

#
# Very very very simple config.sh.  It works with the "current"
# rumprun, not yet guaranteed to be stable.

# edit me!
RUMPRUNDIR=/home/pooka/src/rumprun

export RUMP_SERVER=unix:///tmp/pktgen
export PATH="${RUMPRUNDIR}/bin:${PATH}"
ifconfig pg0 create
ifconfig pg0 inet 1.2.3.4
ifconfig pg0 ip4csum
ifconfig pg0 udp4csum
ifconfig pg0 mtu 9000
ifconfig pg0 
sysctl -w net.inet.udp.sendspace=200000
arp -s 1.2.3.1 12:23:34:45:56
